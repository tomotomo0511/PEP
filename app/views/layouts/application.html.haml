!!!
%html
  %head
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title PEP
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

    .header#header
      .header__content
        %h2.header-boxs
          = link_to 'PEP', root_path, class: "header-box-dog"
        %h2.header-boxs
          = link_to '最新記事一覧', posts_path, class: "header-box"
          - if user_signed_in?
            %h2.header-boxs
              = link_to "マイページ", user_path(current_user), class: "header-box"
              = link_to '投稿', new_post_path, class: "header-box"
          - else
            %h2.header-boxs
              = link_to '新規登録', new_user_registration_path, class: "header-box"
              = link_to 'ログイン', new_user_session_path, class: "header-box"

