    .user-page__main__background-image

  .user-page__profile
    .user-page__profile__content
      .user-page__profile__content__name
        = @user.nickname
      .user-page__profile__content__text
        = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "user-logout"
